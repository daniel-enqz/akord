<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-sm-offset-4 col-md-6 col-lg-4">
    <div class="card w-100 mt-5 bg-white">
    <div class="form-login mt-1">
      <h2 class="text-center fw-bold">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions btn w-100 mb-2 wrapper rounded-3">
            <%= f.button :submit, "Log in", class:"text-white " %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
    </div>
    </div>
  </div>
</div>
