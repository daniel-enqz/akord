<div class="wrapper" data-controller="event-subscription" data-event-subscription-event-id-value="<%= @event.hashid %>">
  <div class="min-vh-100 row justify-content-center mx-0 ">
    <div class="col-xs-12 col-sm-8 col-sm-offset-4 col-md-6 col-lg-4">
      <div class="card w-100  mt-4 blurr-filter">
        <div class="card-body mb-0 text-center py-2">
          <p class="text-white small mb-0">
            <i class="fas fa-user-shield"></i>
            <%= @event.user.attendee.name %>
          </p>
          <h1 class="card-title fw-bold text-info mb-0"><%= @event.title %></strong></h1>
          <p class="text-white small mb-0"><%= @event.description %></p>
        </div>
      </div>
      <% if current_user&.owns?(@event) %>
        <div class="card w-100  mt-2 blurr-filter mb-3">
          <div class="card-body mb-0 text-center">
              <div class="bg-white rounded-3 d-inline-block p-3 mb-3">
                <%= event_qr_code(@event).svg %>
              </div>
              <div class="d-flex justify-content-center" data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
                <button class="btn btn-primary rounded-3" data-action="click->clipboard#copy"><i class="fas fa-link"></i> Copy</button>
                <input class="blurr-filter border-0 rounded-3 " value="<%= short_join_event_url(@event.funid) %>" data-clipboard-target="input" type="text" readonly>
              </div>
          </div>
        </div>
      <%end%>
      <div class="d-flex justify-content-between align-items-end mb-2" >  <%# data-controller="show-voting-details" %>
        <h2 class="text-info mt-2 mb-0">Results</strong></h2>
        <button class="d-inline-flex align-items-center btn btn-light badge"  data-bs-toggle="tooltip" data-bs-placement="top" title="<%= @event.attendees.pluck(:name).to_sentence %>">  <%# data-action="click->show-voting-details#displayVoters" %>
          <span><i class="fas text-primary fa-users"></i></span>&nbsp;<span class="badge bg-primary total-display" data-event-subscription-target="totalDisplay"><%= @event.attendees.count %></span>
        </button>
        <%# <div class="card d-none mt-2" data-show-voting-details-target="voters">
          <div class="card-body">
            <i class="fas fa-user-friends"></i><% @event.attendees.each do |attendee|%>
              <%# <%= attendee.name %>
            <%# <% end %>
          <%# </div>
        </div> %>
      </div>
      <div class="dates" data-event-subscription-target="dates">
        <%= render @event.event_dates %>
      </div>
    </div>
  </div>
</div>
