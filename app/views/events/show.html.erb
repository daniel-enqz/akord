<div class="container">
  <br>
  <h1><%= @event.title %></h1>
  <div class="btn">
    <a><%= link_to "Share event", join_event_path, class: "btn btn-primary" %></a>
  </div>
  <hr>
  <h5><%= @event.description  %><h5>
  <p><strong>Event Creator:</strong> <%= @event.user.attendee.name.capitalize %> </p>
  <% @event.event_dates.each do |event_date| %>
    <p>
      <%= event_date.short_string %>
      |
      <%= event_date.rate %>
      | yesses <%= event_date.yes_count %>
      | nosses <%= event_date.no_count %>
      | maybesessss <%= event_date.maybe_count %>
    </p>
  <% end %>
</div>
<div data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
  <input data-clipboard-target="input" type="text" value="https://www.lewagon.com/" readonly>
  <button class="btn btn-primary" data-action="click->clipboard#copy">Copy to Clipboard</button>
</div>
