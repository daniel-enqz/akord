<% if event_date.chosen? %>
  <%# render modal page %>
<% end %>
<%= link_to "Chose", event_chosen_date_create_path(event_date.event, date_string: event_date.value), data: { controller: "swal", action: "swal#alert" } %>
<div data-date=<%= event_date.value %> class="mb-2">
  <div class="d-flex blurr-filter px-3 <%= event_date.chosen? ? "border border-3 border-primary" : "" %>">
    <div class="pe-3 align-items-center d-flex justify-content-between ">
      <p class="day_date mb-0 <%= event_date.chosen? ? "text-primary" : "" %>"><strong><%= event_date.day %></strong></p>
      <div class="ms-1">
        <h5 class="mb-0 <%= event_date.chosen? ? "text-primary" : "" %>"><%= event_date.month %></h5>
        <p class="mb-0 small text-muted"><%= event_date.week_day %></p>
      </div>
    </div>
    <div class="flex-grow-1 pt-3">
      <div class="progress mb-1">
        <div class="progress-bar bg-secondary"
            style="width: <%= event_date.progress_bar_value %>% "
            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> <%# box-shadow:-1px 10px 10px rgba(91, 192, 222, 0.7); %>
        </div>
      </div>
      <div class="d-flex justify-content-between mb-1 small">
        <div class="text-black"><span class="yes-display"><%= event_date.yes_count %></span> yes</div>
        <div class="text-black"><span class="maybe-display"><%= event_date.maybe_count %></span> maybe</div>
        <div class="text-black"><span class="no-display"><%= event_date.no_count %></span> no</div>
      </div>
    </div>
  </div>
</div>
