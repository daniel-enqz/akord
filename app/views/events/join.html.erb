<div class="wrapper">
  <div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class= col-sm-6>
      <%= image_tag "akord.png", height: 200, class: "img-fluid" %>
      <div class="justify-content-center">
        <div class="card form-login blurr-filter m-1 text-center">
          <h3>
            Joining <%= @event.title %>
          </h3>
            <div class="container d-flex justify-content-center m-1">
              <%= simple_form_for [@event, @attendee] do |f| %>
                <%= f.input :name, label: "Who are you?", placeholder:"E.g.: Uncle John", input_html: { class: "blurr-filter border-0" }, error: "Hmm, seems that a name is missing hereðŸ¤”" %>
                <%= f.button :submit, value:"Join", class:"button-radius btn btn-primary border-radius fw-bold text-white w-100 ms-0" %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
